{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Electron: Main",
        "type": "node",
        "request": "launch",
        "program": "${workspaceFolder}/node_modules/.bin/electron",
        "args": ["."],
        "stopOnEntry": false,
        "sourceMaps": true,
        "outFiles": ["${workspaceFolder}/**/*.js"],
        "preLaunchTask": "npm: start"
      }
    ]
  }